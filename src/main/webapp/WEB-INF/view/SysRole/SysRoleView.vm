#override("content")
<article class="page-container">
	<form class="form form-horizontal" id="form-view">
	            		<input type="hidden" id="id" name="id" value="$!{SysRole.id}"/>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>角色编码：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="rolecode" name="rolecode" type="text" class="input-text" value="$!{SysRole.rolecode}" placeholder="请输入角色编码" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>角色名称：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="rolename" name="rolename" type="text" class="input-text" value="$!{SysRole.rolename}" placeholder="请输入角色名称" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>角色类型：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="roletype" name="roletype" type="text" class="input-text" value="$!{SysRole.roletype}" placeholder="请输入角色类型" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>显示顺序：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="sequence" name="sequence" type="text" class="input-text" value="$!{SysRole.sequence}" placeholder="请输入显示顺序" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>是否启用：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="status" name="status" type="text" class="input-text" value="$!{SysRole.status}" placeholder="请输入是否启用" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>备注：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="remark" name="remark" type="text" class="input-text" value="$!{SysRole.remark}" placeholder="请输入备注" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>操作员id：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="uid" name="uid" type="text" class="input-text" value="$!{SysRole.uid}" placeholder="请输入操作员id" >
			</div>
		</div>
				        		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>操作时间：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input id="uptime" name="uptime" type="text" class="input-text" value="$!{SysRole.uptime}" placeholder="请输入操作时间" >
			</div>
		</div>
						<div class="row cl">
			<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">				
				<button type="submit" class="btn btn-danger radius" ><i class="Hui-iconfont">&#xe632;</i> 提交</button>
				<button onClick="layer_close();" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</article>
#end
